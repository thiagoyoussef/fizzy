<% @page_title = "Account Settings" %>

<% content_for :header do %>
  <%= render "filters/menu", user_filtering: @user_filtering %>
  <h1 class="header__title"><%= @page_title %></h1>
  <div class="header__actions header__actions--end">
    <%= link_to workflows_path, class: "btn" do %>
      <%= icon_tag "bolt" %>
      <span class="for-screen-reader">Workflows</span>
    <% end %>
  </div>
<% end %>

<section class="settings">
  <%= render "account/settings/users", users: @users %>
  <%= render "account/settings/entropy_configuration", account: @account %>
</section>
